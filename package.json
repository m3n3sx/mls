{
  "name": "modern-admin-styler-enterprise",
  "version": "1.2.1",
  "description": "Modern Admin Styler Enterprise - WordPress Admin Customization Plugin",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage --run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "node tests/visual-interactive/runner.cjs --mode interactive",
    "test:visual:headless": "node tests/visual-interactive/runner.cjs --mode headless",
    "test:visual:debug": "node tests/visual-interactive/runner.cjs --mode debug",
    "test:visual:tab": "node tests/visual-interactive/runner.cjs --mode interactive --tab",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "format": "prettier --write \"assets/js/**/*.js\"",
    "format:check": "prettier --check \"assets/js/**/*.js\"",
    "analyze": "vite build --mode analyze",
    "analyze:bundles": "node scripts/analyze-bundles.js",
    "profile": "node scripts/profile-performance.js",
    "optimize": "npm run build && npm run analyze:bundles && npm run profile",
    "check-size": "node scripts/check-bundle-size.js",
    "build:check": "npm run build && npm run check-size",
    "build:production": "bash scripts/production-build.sh",
    "test:production": "bash scripts/test-production-build.sh",
    "build:full": "npm run build:production && npm run test:production",
    "deploy": "bash scripts/deploy-production.sh",
    "deploy:monitor": "bash scripts/monitor-deployment.sh --monitor",
    "deploy:status": "bash scripts/monitor-deployment.sh --status",
    "deploy:rollback": "bash scripts/monitor-deployment.sh --rollback",
    "rollout": "bash scripts/gradual-rollout.sh",
    "rollout:status": "bash scripts/gradual-rollout.sh --status",
    "prepare": "husky install",
    "build:legacy": "npm run build:css && npm run build:js",
    "build:css": "for file in assets/css/*.css; do [ -f \"$file\" ] && [ \"${file%.min.css}\" = \"$file\" ] && echo \"/* Minified for production v1.2.1 */\" > \"${file%.css}.min.css\" && cat \"$file\" >> \"${file%.css}.min.css\"; done",
    "build:js": "for file in assets/js/*.js; do [ -f \"$file\" ] && [ \"${file%.min.js}\" = \"$file\" ] && echo \"/* Minified for production v1.2.1 */\" > \"${file%.js}.min.js\" && cat \"$file\" >> \"${file%.js}.min.js\"; done"
  },
  "dependencies": {
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.7.1",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "playwright": "^1.56.1",
    "prettier": "^3.1.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "terser": "^5.26.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "lint-staged": {
    "assets/js/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/unit/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.min.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "wordpress",
    "admin",
    "customization",
    "styling"
  ],
  "author": "MASE Team",
  "license": "GPL-2.0-or-later"
}
